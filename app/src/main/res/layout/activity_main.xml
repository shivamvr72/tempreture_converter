<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="70dp"
        android:text="@string/tempreture"
        android:textColor="#C464F8"
        android:textSize="21dp" />

    <EditText
        android:layout_width="261dp"
        android:layout_height="48dp"
        android:id="@+id/ed1"
        android:layout_alignStart="@+id/txt1"
        android:layout_alignBottom="@+id/txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-92dp"
        android:hint="enter cl"
        android:padding="10dp"
        android:textColor="#A158F4"
        android:textSize="21dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt1"
        android:layout_marginStart="111dp"
        android:layout_marginTop="190dp"
        android:text="Ferenhieght" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#FFA158F4"
        android:id="@+id/txt2fh"
        android:textSize="37dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:scaleType="fitEnd"
        app:srcCompat="@drawable/temp" />


</RelativeLayout>